
<li class="dropdown">
  <a href="#" class="dropdown_toggle" data-toggle="dropdown">
    排序
    <b class="caret"></b>
  </a>
  <ul class="dropdown-menu">
    <li> <%= link_to("按照薪资下限排序", jobs_path ) %> </li>
    <li> <%= link_to("按照薪资上限排序", jobs_path ) %> </li>
    <li> <%= link_to("按照发表时间排序", jobs_path ) %> </li>
  </ul>
</li>

<div class="col-md-12">
  <div class="job">
    <%= link_to("Add a job", new_job_path, class: "btn btn-primary pull-right") %>
  </div>
  <table class="table table-hover">
    <tbody>
      <% @jobs.each do |job| %>
      <tr>
        <td><%= link_to(job.title, job_path(job)) %></td>
        <td>
          <%= link_to("Edit", edit_job_path(job) )%>
          <%= "|" %>
          <%= link_to("Delete", job_path(job), method: :delete, data: { confirm: "Are you sure?" } )%>
        </td>
        <td><%= job.created_at %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
